
<%- include("partial/header") %>
    <!---header--->
    <div class="header">
        <h1>Welcome!!!</h1>
    </div>
    <!---header--->
    <!---main--->
    <div class="main">
        <div class="main-section">
            <div class="registration-section">
                <h2> Log in </h2>
                <% if (message.length > 0) { %>
                    <div class="alert">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong><%= message %></strong>
                    </div>
                    <% } %>

                    <% if (message2.length > 0) { %>
                        <div class="alert">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong><%= message2 %></strong>
                        </div>
                        <% } %>
                    
                        <div class="social-icons">

                            <a href="#"><i class="icon1"></i><span>Sign in with facebook</span></a>
                            <a href="#"><i class="icon2"></i><span>Sign in with gmail</span></a>
                        </div>
                        <div class="register-form">
                            <div class="login-form">
                                <form method="post" action="/signin">
                                    <input type="email" name="email" value="<%= data.email %>" placeholder="User Email">
                                    <input type="password" name="password" value="<%= data.password %>" placeholder="Password">
                                    <span><input type="checkbox" name="rememberme">Remember Me</span>
                                    <input type="submit" value="Sign in">
                                </form>
                            </div>
